# Development Environment - Cost Optimized Configuration
# This configuration minimizes costs for development/testing

aws_region = "us-east-1"
environment = "development"
project_name = "kado24"

# Database Configuration - Cost Optimized
db_instance_class = "db.t3.micro"  # Smallest instance (2 vCPU, 1 GB RAM) - ~$15/month
db_allocated_storage = 20  # Minimum storage (20 GB) - can auto-scale if needed

# Redis Configuration - Cost Optimized
redis_node_type = "cache.t3.micro"  # Smallest cache node - ~$12/month
redis_password = ""  # No password for dev (not recommended for production)

# ECS Configuration - Cost Optimized
ecs_cpu = 256  # 0.25 vCPU per service (minimum)
ecs_memory = 512  # 512 MB per service (minimum)
ecs_desired_count = 1  # Single instance per service (no redundancy for dev)

# Security
jwt_secret = "CHANGE_THIS_TO_A_STRONG_SECRET_KEY_MINIMUM_256_BITS"
allowed_cidr_blocks = ["0.0.0.0/0"]  # Open for dev (restrict for production)

# Domain (not needed for dev)
domain_name = ""
enable_cloudfront = false

# Cost Optimization Flags
enable_container_insights = false  # Disable Container Insights to save costs
enable_nat_gateway = false  # Use single NAT gateway or none for dev
log_retention_days = 3  # Shorter log retention (3 days vs 7)
backup_retention_days = 1  # Minimal backups (1 day vs 7)

